@model GI_Master_FrontEnd.Models.Empresas

<form asp-action="EmpresasCreate" enctype="multipart/form-data" method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Novo</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="RazaoSocial" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="RazaoSocial" class="form-control" />
                <span asp-validation-for="RazaoSocial" class="text-danger" />
            </div>
            <div class="col-2">
                <label asp-for="Fantasia" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Fantasia" id="Fantasia" name="Fantasia" class="form-control" placeholder="Nome Fanzia" />
                <span asp-validation-for="Fantasia" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="cnpj" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="cnpj" class="form-control" rows="5">
                <span asp-validation-for="cnpj" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="ramo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ramo" class="form-control" />
                <span asp-validation-for="ramo" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="cnae" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="cnae" class="form-control" />
                <span asp-validation-for="cnae" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="DataFundacao" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DataFundacao" class="form-control" />
                <span asp-validation-for="DataFundacao" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Email" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Telefone" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Estado" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Cidade" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Bairro" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Bairro" class="form-control" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Rua" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Rua" class="form-control" />
                <span asp-validation-for="Rua" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Numero" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="foto" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input type="file" id="foto" asp-for="foto" class="form-control" />
                <span asp-validation-for="foto" class="text-danger"></span>

            </div>

            <input name="__RequestVerificationToken" type="hidden"
                   value="<Antiforgery token here>" />


            <div class="col-5 offset-2">
                <a asp-action="EmpregadoList" class="btn-primary btn form-control ">Back to List</a>
            </div>


            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />


}