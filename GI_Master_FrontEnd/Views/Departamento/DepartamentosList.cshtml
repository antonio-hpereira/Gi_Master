@model IEnumerable<GI_Master_FrontEnd.ViewModels.DepartamentosVM>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de Departamentos</h1>
        </div>
        @if (ViewBag.Message != null)
        {
            <div id="liveAlertPlaceholder" class="alert alert-success" role="alert">
                <h3 id="message">@ViewBag.Message</h3>
            </div>

        }

        <div class="col text-end pt-1">
            <a asp-action="DepartamentosCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>Novo Departamento
            </a>
        </div>
    </div>

    <input type="text" class="form-control" id="myInput" onkeyup="myFunction()" placeholder="Search for names..">



    <table class="table" id="myTable">
        <thead>
            <tr>
                
                <th>
                    Nome
                </th>
                <th>
                    Sigla
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>
                        @item.Nome
                    </td>
                    <td>
                        @item.Sigla
                    </td>
                    <td>
                        <a asp-action="EmpresaUpdate" class="btn btn-success" asp-route-id="@item.ID">
                            <i class="fas fa-edit"></i>
                        </a>

                        <a asp-action="EmpresaDetails" class="btn btn-info" asp-route-id="@item.ID">
                            <i class="fas fa-search"></i>
                        </a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="EmpresaDelete" class="btn btn-danger" asp-route-id="@item.ID">
                                <i class="fas fa-trash"></i>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<ol class="list-group list-group-numbered">
