@model IEnumerable<GI_Master_FrontEnd.ViewModels.EmpregadoVM>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de Empregados</h1>
        </div>
        @if(ViewBag.Message != null){
            <div id="liveAlertPlaceholder" class="alert alert-success" role="alert">
                <h3 id="message">@ViewBag.Message</h3>
            </div>
            
        }
       
        <div class="col text-end pt-1">
            <a asp-action="EmpregadosCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>Novo Empregado
            </a>
        </div>
    </div>

    <input type="text" class="form-control" id="myInput" onkeyup="myFunction()" placeholder="Search for names..">
    
   

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>
                    Perfil
                </th>
                <th>
                    Nome
                </th>
                <th>
                    Cpf
                </th>
                <th>
                    Data de Nascimento
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@WC.ImagenEmpregadoPath@item.Foto" width="40px" height="40px" style="border-radius:5px; border:1px solid #bbb" />
                    </td>
                    <td>
                        @item.Nome
                    </td>
                    <td>
                        @item.CPF
                    </td>
                    <td>
                        @item.DataNascimento
                    </td>
                    <td>
                        <a asp-action="EmpregadostUpdate" class="btn btn-success" asp-route-id="@item.ID">
                            <i class="fas fa-edit"></i>
                        </a>

                        <a asp-action="EmpregadostDetails" class="btn btn-info" asp-route-id="@item.ID">
                            <i class="fas fa-search"></i>
                        </a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="EmpregadostDelete" class="btn btn-danger" asp-route-id="@item.ID">
                                <i class="fas fa-trash"></i>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="Modal01" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>